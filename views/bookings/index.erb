<p>All Bookings</p>

<form action="/bookings/new" method="GET"><input type="submit" value="create new booking"></form>

<!-- how to make this not a link? -->
  <% @bookings.each do |booking| %>
    <h1><a <%= booking.id%>"><%= booking.member.format_name%><br><%= booking.session.session_name%></a></h1>

    <form action="/bookings/<%= booking.id %>/delete" method="POST">
      <input type="submit" value="delete booking" />
    </form>

<% end %>
